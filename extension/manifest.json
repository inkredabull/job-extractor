{
  "manifest_version": 3,
  "name": "Job Extractor Assistant",
  "version": "1.0.0",
  "description": "Chrome extension companion for the job extractor CLI tool",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "https://app.tealhq.com/*"
  ],
  "action": {
    "default_title": "Job Extractor Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}