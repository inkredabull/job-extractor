# ============================================
# LLM Provider Configuration (REQUIRED)
# ============================================

# Resume Generation Provider
# Options: "anthropic" | "openai"
RESUME_LLM_PROVIDER=anthropic

# Resume Generation Model
# Anthropic examples: claude-haiku-4-5-20251001, claude-sonnet-4-5-20250929
# OpenAI examples: gpt-4o-mini, gpt-4o, gpt-5.2-2025-12-11
RESUME_LLM_MODEL=claude-sonnet-4-5-20250929

# Critique Provider
# Options: "anthropic" | "openai"
CRITIQUE_LLM_PROVIDER=anthropic

# Critique Model
CRITIQUE_LLM_MODEL=claude-sonnet-4-5-20250929

# API Keys (provide key for your chosen provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Auto-confirm cost estimates (useful for CI/automation)
# Set to "true" to skip confirmation prompts
LLM_AUTO_CONFIRM=false

# ============================================
# Additional Configuration
# ============================================

# LangSmith Configuration (optional, for evaluation and monitoring)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Optional: Job extraction settings (uses OpenAI for now)
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000

# Optional: Resume generation settings
ANTHROPIC_MAX_TOKENS=4000
MAX_ROLES=4

# Optional: Auto-resume generation settings
AUTO_RESUME_THRESHOLD=85
AUTO_RESUME_CV_PATH=./sample-cv.txt

# Profile Configuration (sensitive information)
MIN_SALARY=200000

# Resume Output Configuration
RESUME_OUTPUT_DIR=~/Google Drive/My Drive/Professional/Job Search/Applications/Resumes

# Teal Integration (via Stagehand AI - automatically posts jobs to Teal)
# Requires OPENAI_API_KEY for AI-powered browser automation
TEAL_EMAIL=your_teal_email@example.com
TEAL_PASSWORD=your_teal_password

# Google API Configuration (for Gmail and Sheets integration)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Google Sheets Job Tracking (optional)
# Set to false to disable automatic logging to sheets
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_URL=https://docs.google.com/spreadsheets/d/YOUR_SPREADSHEET_ID
GOOGLE_SHEETS_SHEET_NAME=Sheet1