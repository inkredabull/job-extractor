{
  "manifest_version": 3,
  "name": "Job Extractor Assistant",
  "version": "1.0.0",
  "description": "Chrome extension companion for the job extractor CLI tool",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "declarativeNetRequest",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "https://app.tealhq.com/*",
    "https://www.linkedin.com//*"
  ],
  "action": {
    "default_title": "Job Extractor Assistant",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.linkedin.com/in/*",
        "https://www.linkedin.com/company/*",
        "https://www.linkedin.com/feed/*",
        "https://www.linkedin.com/search/results/people/*"
      ],
      "js": ["components/linkedin-networking/linkedin-networking-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.linkedin.com/feed*"],
      "js": ["linkedin-inject.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+J",
        "mac": "Command+Shift+J"
      },
      "description": "Toggle Job Tracker panel"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
